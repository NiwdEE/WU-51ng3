<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= locals.title || "writeup" %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/writeup.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/github-dark.min.css">
</head>
<body>
    <%- include("partials/header.ejs") %>

    <main class="wrapper">
        <div class="writeup-header">
            <div class="writeup-info">
                <% if (writeup.date) { %>
                    <span class="date">
                        <img src="/img/icons/date.svg" alt="calendar icon" class="calendar-icon">
                        <%= writeup.date %>
                    </span>
                <% } %>

                <% if (writeup.author) { %>
                    <span class="author">
                        <img src="/img/icons/user.svg" alt="author icon" class="author-icon">
                        <%= writeup.author %>
                    </span>
                <% } %>

                <% if (writeup.category) { %>
                    <span class="category">
                        <img src="/img/icons/binary.svg" alt="tag icon" class="tag-icon">
                        <%= writeup.category %>
                    </span>
                <% } %>
            </div>
        </div>

        <div class="writeup">
            <%- content %>
        </div>

    </main>


    <script>
        // For summaries and anchors
        h1s = document.querySelectorAll("h1");
        h1s.forEach(h1 => {
            h1.id = h1.innerText.replace(/\s+/g, '-').toLowerCase();
        });
    </script>
</body>
</html>